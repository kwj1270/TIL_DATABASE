SELECT 열 FROM 테이블명 WHERE a >= 1 AND a <= 13
SELECT 열 FROM 테이블명 WHERE a BETWEEN 1 AND13
 
SELECT 열 FROM 테이블명 WHERE a = 1 OR  a = 13 OR a = 55
SELECT 열 FROM 테이블명 WHERE a IN(1,13,55);

SELECT 열 FROM 테이블명 WHERE name LIKE '%kim%';

